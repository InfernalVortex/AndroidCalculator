<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".20"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".80">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".16">
            <Button
                android:id="@+id/clear"
                android:text="Clear"
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="fill_parent"
                android:background="#828282"
                android:textSize="20sp"
                android:textColor="#ffffff" />
            <Button
                android:id="@+id/delete"
                android:text="Delete"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#828282"
                android:textColor="#902094" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".21">
            <Button
                android:id="@+id/seven"
                android:text="7"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/eight"
                android:text="8"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/nine"
                android:text="9"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/divide"
                android:text="/"
                android:layout_width="0dp"
                android:textSize="25sp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#828282"
                android:textColor="#902094" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".21">
            <Button
                android:id="@+id/four"
                android:text="4"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/five"
                android:text="5"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/six"
                android:text="6"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/multiply"
                android:text="x"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#828282"
                android:textColor="#902094" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".21">
            <Button
                android:id="@+id/one"
                android:text="1"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/two"
                android:text="2"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/three"
                android:text="3"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/add"
                android:text="+"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#828282"
                android:textColor="#902094" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".21">
            <Button
                android:id="@+id/decimal"
                android:text="."
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="30sp" />
            <Button
                android:id="@+id/zero"
                android:text="0"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="27sp" />
            <Button
                android:id="@+id/equals"
                android:text="="
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#b2b0b0"
                android:textColor="#3e8f92"
                android:textSize="30sp" />
            <Button
                android:id="@+id/subtract"
                android:text="-"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:layout_height="fill_parent"
                android:background="#828282"
                android:textColor="#902094" />
        </TableRow>

    </TableLayout>

</LinearLayout>

